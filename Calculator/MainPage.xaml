        <ResourceDictionary>
            <Style x:Key="BaseButton" TargetType="Button">
                <Setter Property="Text" Value="Empty" />
                <Setter Property="BackgroundColor" Value="Gray" />
                <Setter Property="FontSize" Value="35" />
                <Setter Property="BorderColor" Value="Black" />
            </Style>

            <Style
                x:Key="GreyOperatorButton"
                BasedOn="{StaticResource BaseButton}"
                TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="Gray" />
            </Style>

            <Style
                x:Key="YellowOperatorButton"
                BasedOn="{StaticResource BaseButton}"
                TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="Orange" />
            </Style>

            <Style
                x:Key="WhiteNumericButton"
                BasedOn="{StaticResource BaseButton}"
                TargetType="Button">
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BackgroundColor" Value="White" />
            </Style>

            <Style x:Key="GridBackground" TargetType="Label">
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="TextColor" Value="DarkSlateBlue" />
                <Setter Property="BackgroundColor" Value="DarkSlateBlue" />
            </Style>



        </ResourceDictionary>
